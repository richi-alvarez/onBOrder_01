<main class="contenedor contenedor-formularios">
    <h1><%= nombrePagina %></h1>
    <form class="default-form" action="/nuevo-meeti" method="POST" enctype="multipart/form-data">
        <legend>Sobre el Meeti</legend>
        <div class="campo">
            <label>Grupo</label>
            <select name="grupoId" required>
                <option value="" disabled selected>-- Selecciona Grupo --</option>
                <% if(grupos.length > 0 )  { %>
                    <% grupos.forEach(grupo => {  %>
                        <option value="<%= grupo.id %>"><%= grupo.nombre %></option>
                    <% }) %>
                <% } %>
            </select>
        </div>
        <div class="campo">
            <label>Titulo</label>
            <input type="text" name="titulo" placeholder="Titulo Meeti" required>
        </div>
        <!-- <div class="campo">
            <label>Invitado</label>
            <input type="text" name="invitado" placeholder="Nombre Invitado o Ponente (si aplica)">
        </div> -->
        <div class="columnas-2 grid">
            <div class="campo">
                <label>Fecha</label>
                <input type="date" name="fecha" placeholder="Fecha Meeti" required>
            </div>
            <div class="campo">
                <label>Hora</label>
                <input type="time" name="hora" placeholder="Hora Meeti"required>
            </div>
        </div>
        <!-- <div class="campo">
            <label>Cupo</label>
            <input type="number" min="1" name="cupo" placeholder="Cupo Meeti (si aplica)">
        </div> -->
        <div class="campo descripcion">
            <label>Descripción</label>
            <div class="contenedor-editor">
                <input type="hidden" id="x" name="descripcion" required>
                <trix-editor input="x"></trix-editor>
            </div>
        </div>
        <div class="campo">
            <label>Imagen</label>
            <input type="file" name="imagen">
        </div>

        <legend>producto personalizada</legend>

        <div class="campo">
            <label></label>
            <div class="contenedor-input">
                    <div>
                        <label>
                            <input type="checkbox" class="checkB-input checkbox" id="checkPago"/>
                            vender producto?
                         </label>
                    </div>
            </div>
        </div>

        <div class="pago" id="pagoCheck" style="display:none">

            <div class="campo">
                <label>Valor reunion</label>
                <input type="text" id="valorMeeti" name="valorMeeti" placeholder="Valor reunión" >
            </div>
                <br>
            <p style="
    font-weight: bold;
    color: #333;
    font-size: 1rem;
    text-align: center;
">los siguientes valores debe de validarlo en la cuenta de ePayco:</p>

            <div class="campo">
                <label>P_CUST_ID</label>
                <input type="text" id="epayco_customerid" name="epayco_customerid" placeholder="ID de cliente que lo identifica en ePayco. Lo puede encontrar en su panel de clientes en la opción configuración" >
            </div>
            <div class="campo">
                <label>P_KEY</label>
                <input type="text" id="epayco_secretkey" name="epayco_secretkey" placeholder="LLave para firmar la información enviada y recibida de ePayco." >
            </div>

            <div class="campo">
                <label>PUBLIC_KEY</label>
                <input type="text" id="epayco_publickey" name="epayco_publickey" placeholder="LLave para autenticar y consumir los servicios de ePayco." >
            </div>

            <div class="campo">
                <label>modo</label>
                <div>
                    <label>
                      <input type="radio" class="checkB-input radio" name="checkoutTest" id="checkoutTest" checked />
                      Prueba
                    </label>
                    <label>
                      <input type="radio" class="checkB-input radio" name="checkoutTest" id="checkoutTest" />
                      Producción
                    </label>
                  </div>
            </div>
        </div>
        <br>
        <p style="
        font-weight: bold;
        color: #333;
        font-size: 1rem;
        text-align: center;
    ">los siguientes valores debe de validarlo en la cuenta de zoom:</p>
        <div class="campo">
            <label>zoom id reunion</label>
            <input type="text" id="zoomId" name="zoomId" placeholder="id reunio zoom" required>
        </div>

        <div class="campo">
            <label>zoom password reunion</label>
            <input type="text" id="zoomPassword" name="zoomPassword" placeholder="password reunio zoom" required >
        </div>
        <br>
        <p class="informacion">Confirma que los siguientes campos sean correctos:</p>
        <div class="campo">
            <label>Ciudad</label>
            <input type="text" id="ciudad" name="ciudad" placeholder="Ciudad" required>
        </div>
        <div class="campo">
            <label>Estado</label>
            <input type="text" id="estado" name="estado" placeholder="Estado" required>
        </div>
        <div class="campo">
            <label>País</label>
            <input type="text" id="pais" name="pais" placeholder="País" required>
        </div>
            <input type="hidden" id="lat" name="lat">
            <input type="hidden" id="lng" name="lng">
        <div class="campo enviar">
            <input type="submit" class="btn btn-rosa" value="Crear Meeti">
        </div>
    </form>
</main>

