        <div class="campo">
            <label>Ciudad</label>
            <input type="text" id="ciudad" name="ciudad" value="<%= meeti.ciudad %>">
        </div>
        <div class="campo">
            <label>Estado</label>
            <input type="text" id="estado" name="estado" value="<%= meeti.estado %>">
