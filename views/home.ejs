<div class="buscador-inicio">
    <div class="contenedor">
		<div class="sec-title">
			<h2 style="padding: 0;">Busca algo</h2>
            <h3 class="m-text5 t-center" style="color: #ef9128;">
                 que te guste!!
			</h3>
			
		</div>
		<div>
        <form action="/busqueda" method="GET" style="
		border: solid 1px #e5e5e5;
		border-radius: 5px;
	">
            <select name="categoria" style="
			padding: 10px;
			margin: 10px;
			height: 41px;
			border: solid 2px #e5e5e5 !important;
		">
                    <option value="" selected>Categoria</option>
                    <% categorias.forEach(categoria => {  %>
                        <option value="<%= categoria.id %>"> <%= categoria.nombre %> </option>
                    <% }) %>
            </select>
            <input type="text" name="titulo" placeholder="Nombre del producto" style="
			margin: 10px;
			height: 41px;
			border: solid 2px #e5e5e5 !important;
		">
            <input type="text" name="ciudad" placeholder="Ciudad" style="
			margin: 10px;
			height: 41px;
			border: solid 2px #e5e5e5 !important;
		">
            <select name="pais" style="
			padding: 10px;
			margin: 10px;
			height: 41px;
			border: solid 2px #e5e5e5 !important;
		">
                <option value="" selected>Pais</option>
                <option value="MEX">México</option>
                <option value="COL">Colombia</option>
                <option value="ARG">Argentina</option>
                <option value="ESP">España</option>
                <option value="USA">Estados Unidos</option>
                <option value="PER">Perú</option>
            </select>
            <input type="submit" value="Buscar" class="btn btn-rosa" style="
			adding: 10px;
			margin: 10px;
			height: 41px;
			background-color: #797979;
		">
		</form>
	</div>
    </div>
</div>



